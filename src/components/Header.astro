---
// Header.astro - Common header component for all dashboard pages
import { getUserData } from "../utils/auth";

const userData = getUserData();
const username = userData?.name || "Admin";
---

<header class="header-branding">
  <div class="header-left">
    <img src="/img/favicon.png" alt="ImpulsTrip Logo" class="logo-img" />
    <h1>ImpulsTrip Admin</h1>
  </div>
  <div class="user-profile">
    <div class="user-avatar">
      <i class="fas fa-user"></i>
    </div>
    <div class="user-info">
      <span id="currentUser" class="username">{username}</span>
      <a
        href="/login"
        id="logoutBtn"
        class="btn btn-sm btn-outline-primary ms-3"
      >
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    </div>
  </div>
</header>

<style>
  .header-branding {
    position: relative;
  }

  .header-left h1 {
    font-size: 2.2rem;
    margin: 0;
  }

  .user-profile {
    display: flex;
    align-items: center;
  }

  .username {
    font-weight: 500;
    color: var(--light);
    font-size: 1.05rem;
  }

  @media (max-width: 768px) {
    .header-branding {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .user-profile {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
